@model LenderApp.Models.ExpenseType

<form method="post" asp-action="DeletePost">
    @*input is set to the Id - will know whatever input will be for the specific id from the controller*@
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class ="form-group row">
            <h2 class="text-black-50 pl-3">Delete Expense Type</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        @*using label and asp-for you can use the data from the model from Item*@
                        <label asp-for="Name"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6"><br/>
                        @*using input and asp-for so you can use the data from the model from Item*@
                        @*user cannot change it, but see it by using "disabled"*@
                        <input asp-for="Name" disabled class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col"><br/>
                            <input type="submit" class= "btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col"><br/>
                             <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

