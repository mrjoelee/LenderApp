@model IEnumerable<LenderApp.Models.ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary">Create New Expense Type</a>
        </div>
    </div>
    <br />

    @*iterate through all the items*@
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expenseType in Model)
                {
                    @*for every single items inside the Model create a table row*@ 
                    <tr>
                        <td width="35%">@expenseType.Name</td>
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="ExpenseType" asp-action="Update" asp-route-id="@expenseType.Id"
                                class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="ExpenseType" asp-action="Delete" asp-route-id="@expenseType.Id"
                                class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>
